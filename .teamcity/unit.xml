<!-- TeamCity: unit Build Configuration -->
<build>
    <name>Build & Unit Tests</name>
    <steps>
        <step name="Checkout" type="vcsCheckout"/>
        <step name="Build & Run Unit Tests" type="simpleRunner">
            <parameters>
                <param name="command.executable">./gradlew</param>
                <param name="command.parameters">clean build</param>
            </parameters>
        </step>
    </steps>
    <features>
        <feature type="junit-10.0">
            <param name="path">**/build/test-results/test/*.xml</param>
        </feature>
    </features>
</build>