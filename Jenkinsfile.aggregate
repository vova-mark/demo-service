pipeline {
    agent any
    stages {
        stage('Build & Unit Tests') {
            steps {
                build job: 'unit', wait: true
            }
        }
        stage('Integration Tests') {
            steps {
                build job: 'integration', wait: true
            }
        }
        stage('API Isolated Tests') {
            steps {
                build job: 'api', wait: true
            }
        }
    }
}

